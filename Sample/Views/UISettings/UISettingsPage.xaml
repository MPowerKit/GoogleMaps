<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:gm="clr-namespace:MPowerKit.GoogleMaps;assembly=MPowerKit.GoogleMaps"
             xmlns:vm="clr-namespace:Sample.ViewModels"
             x:Class="Sample.Views.UISettingsPage"
             Title="UISettings Page"
             x:DataType="vm:UISettingsPageViewModel">
    <ContentPage.BindingContext>
        <vm:UISettingsPageViewModel />
    </ContentPage.BindingContext>
    
    <Grid RowDefinitions="Auto,*">
        <Grid ColumnDefinitions="*,*,*"
              RowDefinitions="Auto,Auto, Auto">
            <VerticalStackLayout Grid.Column="0">
                <CheckBox IsChecked="{Binding CompassEnabled, Mode=TwoWay}"/>
                <Label Text="Compas enable"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       FontSize="Caption"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1">
                <CheckBox IsChecked="{Binding MapToolbarEnabled, Mode=TwoWay}" />
                <Label Text="Map tool bar enable"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       FontSize="Caption"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2">
                <CheckBox IsChecked="{Binding ScrollGesturesEnabled, Mode=TwoWay}" />
                <Label Text="Scroll gesture enable"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       FontSize="Caption"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="0"
                                   Grid.Row="1">
                <CheckBox IsChecked="{Binding ZoomControlsEnabled, Mode=TwoWay}" />
                <Label Text="Zoom control enable"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       FontSize="Caption"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1"
                                   Grid.Row="1">
                <CheckBox IsChecked="{Binding ZoomGesturesEnabled, Mode=TwoWay}" />
                <Label Text="Zoom gesture enable"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       FontSize="Caption"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2"
                                   Grid.Row="1">
                <CheckBox IsChecked="{Binding TiltGesturesEnabled, Mode=TwoWay}" />
                <Label Text="Tilt gesture enable"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       FontSize="Caption"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="0"
                                   Grid.Row="2">
                <CheckBox IsChecked="{Binding RotateGesturesEnabled, Mode=TwoWay}" />
                <Label Text="Rotate enable"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       FontSize="Caption"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1"
                                   Grid.Row="2">
                <CheckBox IsChecked="{Binding MyLocationButtonEnabled, Mode=TwoWay}" />
                <Label Text="My location enable"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       FontSize="Caption"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2"
                                   Grid.Row="2">
                <CheckBox IsChecked="{Binding IndoorLevelPickerEnabled, Mode=TwoWay}" />
                <Label Text="In door level enable"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       FontSize="Caption"/>
            </VerticalStackLayout>
        </Grid>
        <gm:GoogleMap Grid.Row="1" />
    </Grid>
</ContentPage>